@model IEnumerable<ProjectBreadPit.Models.Broodje>

<h2>Product List</h2>

<p>
    <a asp-action="New" class="btn btn-primary">Add New Product</a>
</p>
<p>
    <a asp-action="OrderManager" class="btn btn-primary">Manage orders</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td><img src="@product.ImageName" alt="Product Image" style="max-width: 100px; max-height: 100px;" /></td>
                </tr>
        }
    </tbody>
</table>