@model List<Sandwich>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Welcome to the Dashboard</h2>

<div class="container">
    <div class="row">
        @foreach (var sandwich in Model)
        {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="@Url.Content(sandwich.ImageUrl)" alt="@sandwich.Name">
                        <div class="card-body">
                            <h4>@sandwich.Name</h4>
                            <p class="card-text">Price: @sandwich.Price</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
