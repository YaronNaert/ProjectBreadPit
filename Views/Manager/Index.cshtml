@model IEnumerable<ProjectBreadPit.Models.Order>

@{
    ViewData["Title"] = "Orders Overview";
}

<h1>Orders Overview</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Total Price</th>
            <th>Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                <tr>
                    <td>@order.OrderId</td>
                    <td>€@(order.OrderItems.Sum(oi => oi.Price * oi.Quantity))</td>
                    <td>
                        <ul>
                        @foreach (var item in order.OrderItems)
                        {
                                    <li>@item.BroodjeName - Quantity: @item.Quantity</li>
                        }
                        </ul>
                    </td>
                </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Manager" asp-action="TotalSandwiches" class="btn btn-primary">Total Sandwich Orders</a>
</div>
