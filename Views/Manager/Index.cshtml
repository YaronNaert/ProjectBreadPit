@model IEnumerable<ProjectBreadPit.Models.Order>

@{
    ViewData["Title"] = "Orders Overview";
}

<h1>Orders Overview</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Total Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CustomerName</td>
                    <td>@order.TotalPrice</td>
                    <td><a href="@Url.Action("OrderDetails", "Manager", new { orderId = order.OrderId })">View Details</a></td>
                </tr>
        }
    </tbody>
</table>
